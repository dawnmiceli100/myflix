%section.admin_add_video
  .container
    .row
      .col-md-10.col-md-offset-1
        = bootstrap_form_for([:admin, @video], layout: :horizontal) do |f|
          %ul.nav.nav-tabs
            %li
              %a(href="") Recent Payments
            %li.active
              %a(href="") Add a New Video
          %br
          %fieldset 
            = f.text_field :title, control_col: "col-sm-3"   
            = f.select :category_id, options_for_select(Category.all.map {|category| [category.name, category.id]}), control_col: "col-sm-3"    
            = f.text_area :description, rows: 8, control_col: "col-sm-6"
            = f.file_field :large_cover_art, control_col: "col-sm-6", class: "btn btn-file"
            = f.file_field :small_cover_art, control_col: "col-sm-6", class: "btn btn-file"
            = f.text_field :video_url, control_col: "col-sm-6"    
          %fieldset.actions.form-group
            .col-sm-6.col-md-offset-3
              %input(type="submit" value="Add Video" class="btn btn-default")
