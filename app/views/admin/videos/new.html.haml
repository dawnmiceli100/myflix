%section.admin_add_video
  .container
    .row
      .col-md-10.col-md-offset-1
        = form_for [:admin, @video], html: { class: "form-horizontal" } do |f|
          %ul.nav.nav-tabs
            %li
              %a(href="") Recent Payments
            %li.active
              %a(href="") Add a New Video
          %br
          %fieldset
            .form-group
              .control-label.col-sm-3
                = f.label :title
              .col-sm-3  
                = f.text_field :title, class: "form-control"
            .form-group
              .control-label.col-sm-3
                = f.label :category_id, "Category" 
              .col-sm-3      
                = f.select :category_id, options_for_select(Category.all.map {|category| [category.name, category.id]}), {}, class: "form-control"
            .form-group
              .control-label.col-sm-3
                = f.label :description
              .col-sm-6      
                = f.text_area :description, rows: 8, class: "form-control"
            .form-group
              .control-label.col-sm-3
                = f.label :large_cover_art, "Large Cover"
              .col-sm-6
                = f.file_field :large_cover_art, class: "btn btn-file form-control"
            .form-group
              .control-label.col-sm-3
                = f.label :small_cover_art, "Small Cover" 
              .col-sm-6
                = f.file_field :small_cover_art, class: "btn btn-file form-control"

          %fieldset.actions.form-group
            .col-sm-6.col-md-offset-3
              %input(type="submit" value="Add Video" class="btn btn-default")
